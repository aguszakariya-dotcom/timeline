<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title><%= title %></title>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body{
            background-image: url("../images/001.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;

        }
    </style>
</head>

<body style="background-image: url('../assets/images/001.jpg'); background-size: cover;">
    <div class="container mt-5 ">
        <h1 class="text-center"><%= title %></h1>
        <center>
            <div class="row ">
                <div class="col-md-12 col-lg-8 card shadow-sm mb-2 text-start">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nama Customer</th>
                                <th scope="col">Style</th>
                                <th scope="col">Jumlah</th>
                                <th scope="col">Finish</th>
                                <th scope="col">Keterangan</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i = 0; i < data.length; i++){ %>
                            <% for (let time of times) { %>
                            <tr>
                                <th scope="row"><%= i %> </th>
                                <td><%= time.customer %></td>
                                <td><%= time.style %></td>
                                <td><%= time.qty %></td>
                                <td><%= time.finish_at %></td>
                                <td><%= time.keterangan %></td>
                                <td>
                                    <a href="/edit/<%= time.id %>" class="btn btn-primary">Edit</a>
                                    <a href="/delete/<%= time.id %>" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                            
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-12 col-lg-6 card shadow-sm p-3">
                    <h4 class="text-center">Tambah data</h4>
                    <hr>
                    <form action="/tambah" method="post">
                        <div class="mb-3 row">
                            <label for="customer" class="col-sm-5 col-form-label">Nama Customer</label>
                            <div class="col-sm-7">
                                <input type="text"  class="form-control" id="customer" name="customer">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="style" class="col-sm-5 col-form-label">Style</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="style" name="style">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="qty" class="col-sm-5 col-form-label">Jumlah</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="qty" name="qty">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="finish_at" class="col-sm-5 col-form-label">Tanggal Finish</label>
                            <div class="col-sm-7">
                                <input type="date" class="form-control" id="finish_at" name="finish_at">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="keterangan" class="col-sm-5 col-form-label">Keterangan</label>
                            <div class="col-sm-7">
                                <textarea name="keterangan" id="" cols="40" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <div class="col-sm-12  text-end">
                                <button type="submit" id="simpan" class="btn btn-outline-primary">Tambahkan</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </center>

    </div>

<script>

    $("#simpan").click( function(){
            if($("#customer").val() == ""){
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Nama Customer tidak boleh kosong!',
                        footer: '<a href>Why do I have this issue?</a>'
                    })
                    return false;
                }else if($("#style").val() == ""){
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Stylenya tidak boleh kosong!',
                        footer: '<a href>Why do I have this issue?</a>'
                    })
                    return false;
                }else if($("#qty").val() == ""){
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Jumlahnya tidak boleh kosong!',
                        footer: '<a href>Why do I have this issue?</a>'
                    })
                    return false;
                }else if($("#keterangan").val() == ""){
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Keterangan harus diisi!',
                        footer: '<a href>Why do I have this issue?</a>'
                    })
                    return false;
                }else if($("#finish_at").val() == ""){
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Tanggal Finish tidak boleh kosong!',
                        footer: '<a href>Why do I have this issue?</a>'
                    })
                    return false;
                }
    })
</script>
    <!-- batas  -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
</body>

</html>